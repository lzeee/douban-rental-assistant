{
  "manifest_version": 3,
  "name": "豆瓣租房助手",
  "description": "帮助租客更便捷地筛选、浏览租房小组的帖子。祝愿漂泊在外的你我，都能寻得一处安身之所。",
  "version": "1",
  "icons": {
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
	 "default_icon": {
      "128": "images/icon-128.png"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.douban.com/group/*"],
  "minimum_chrome_version": "102"

}